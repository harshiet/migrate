<?xml version="1.0" encoding="UTF-8"?>

<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
		http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<view-state id="home" view="home" model="migrationRequest">
		<transition on="submit" to="connectSource" />
	</view-state>
	<action-state id="connectSource">
		<evaluate expression="connectAction.connectSource(migrationRequest, messageContext)" result="conversationScope.source"/>
		<transition on="success" to="connectTarget" />
		<transition on="no" to="home" />
	</action-state>
	<action-state id="connectTarget">
		<evaluate expression="connectAction.connectTarget(migrationRequest, messageContext)"  result="conversationScope.target"/>
		<transition on="success" to="fetchSourceMetdata" />
		<transition on="no" to="fetchSourceMetdata" />
	</action-state>
	<action-state id="fetchSourceMetdata">
		<evaluate expression="fetchMetadataAction.fetch(migrationRequest, messageContext, conversationScope.source)" />
		<transition on="yes" to="fetchTargetFields" />
		<transition on="no" to="home" />
	</action-state>
	<end-state id="fetchTargetFields" view="externalRedirect:contextRelative:/homes.do" />
</flow>
